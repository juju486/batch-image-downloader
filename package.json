{
  "name": "batch-image-downloader",
  "version": "1.0.0",
  "description": "批量图片下载器 - 支持压缩包和单张下载",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "docker:build": "docker build -t image-downloader .",
    "docker:run": "docker run -d -p 8080:8080 --name image-downloader image-downloader",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop image-downloader",
    "pm2:restart": "pm2 restart image-downloader",
    "pm2:logs": "pm2 logs image-downloader"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "progress": "^2.0.3",
    "express": "^4.18.2",
    "archiver": "^6.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["image", "download", "batch", "zip"],
  "author": "Your Name",
  "license": "MIT"
}
